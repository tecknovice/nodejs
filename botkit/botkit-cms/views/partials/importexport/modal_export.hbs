<div class="editor_modal_box">
    <header>
      <h3>Script Export</h3>
      <p>Download exported scripts, or copy the JSON below into your own file.</p>
    </header>
    <section class="box">
      <textarea rows='10' id="export" readonly>{% parsed_commands | json %}</textarea>
    </section>
    <footer>
      <a class="button" ng-href="{% ui.exported_text %}" download="scripts.json">Download</a>
      <button ngclipboard data-clipboard-target="#export" ngclipboard-success="clipped(e);" ngclipboard-error="clipError(e);"><i class="fa fa fa-clipboard"></i> {% ui.copy %}</button>
      <button ng-click="clearExport()">Done</button>
    </footer>
</div>
